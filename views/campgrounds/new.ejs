<% layout('/layout/boilerPlate') %>
    <div class="row">
        <div class="col-8 offset-2">
            <div class="card shadow mb-5">
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <h2 class="text-center h4 pb-2 mb-4 text-danger border-bottom border-danger">New Campground</h2>
                    </div>
                    <form action="/campgrounds" method="POST" novalidate class="validated-form"
                        enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label" for="title">Title</label>
                            <input class="form-control" type="text" name="campground[title]" id="title" autofocus required>
                            <div class="valid-feedback">
                                Looks Good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="location">Location</label>
                            <input class="form-control" type="text" name="campground[location]" id="location" required>
                            <div class="valid-feedback">
                                Looks Good!
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="price">Campground Price</label>
                            <div class="input-group">
                                <span class="input-group-text" id="price-label">â‚¹</span>
                                <input type="text" class="form-control" id="price" placeholder="0.00"
                                    aria-label="Username" aria-describedby="price-label" name="campground[price]"
                                    required>
                                <div class="valid-feedback">
                                    Looks Good!
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="description">Description</label>
                            <textarea class="form-control" type="text" name="campground[description]" id="description"
                                required></textarea>
                            <div class="valid-feedback">
                                Looks Good!
                            </div>
                        </div>
                        <div class="mb-5">
                            <label for="image" class="form-label">Upload Images</label>
                            <input class="form-control" type="file" id="image" name="image" multiple>
                        </div>
                        <div class="mb-3 d-grid gap-2">
                            <button class="btn btn-outline-success">Add Campgorund</button>
                        </div>
                        <div class="d-grid gap-2">
                            <a href="/campgrounds" class="btn btn-outline-primary">All Campground</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>